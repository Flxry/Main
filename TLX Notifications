function MakeNotification(Text, Color)
    local TweenService = game:GetService("TweenService")
    local Goal1 = {Position = UDim2.new(0.850774765, 0, 0.95, 0)}

    local TweenInfo1 = TweenInfo.new(
        1,
        Enum.EasingStyle.Sine, 
        Enum.EasingDirection.InOut,
        0,
        false,
        1
    )

    local TweenPosition1 = TweenService:Create(DisplayBars, TweenInfo1, Goal1)

    local TweenService = game:GetService("TweenService")
    local Goal2 = {Position = UDim2.new(1, 0, 0.95, 0)}

    local TweenInfo2 = TweenInfo.new(
        1,
        Enum.EasingStyle.Sine, 
        Enum.EasingDirection.InOut,
        0,
        false,
        1
    )

    local TweenPosition2 = TweenService:Create(DisplayBars, TweenInfo2, Goal2)

    TextLabel.Text = Text
    if not Color then
        TextLabel.TextColor3 = Color3.fromRGB(246, 70, 89)
        ColorFrame.ImageColor3 = Color3.fromRGB(246, 70, 89)
    else
        TextLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
        ColorFrame.ImageColor3 = Color3.fromRGB(0, 255, 0)
    end

    TweenPosition1:Play()

    wait(3)

    TweenPosition2:Play()

    TweenPosition2.Completed:Connect(function()
        if game.CoreGui:FindFirstChild("Notifications") then
            game.CoreGui.Notifications:Destroy()
        end
    end)
end
